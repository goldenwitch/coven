<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>DiscordAgent</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <EnforceCodeStyleInBuild>false</EnforceCodeStyleInBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" />
  </ItemGroup>

  <!-- Prefer local projects when toggled; otherwise use published packages -->
  <ItemGroup Condition="'$(PreferProjectReferences)' == 'true'">
    <ProjectReference Include="..\..\Coven.Chat.Discord\Coven.Chat.Discord.csproj" />
    <ProjectReference Include="..\..\Coven.Agents.OpenAI\Coven.Agents.OpenAI.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(PreferProjectReferences)' != 'true'">
    <PackageReference Include="Coven.Chat.Discord" />
    <PackageReference Include="Coven.Agents.OpenAI" />
  </ItemGroup>

</Project>

